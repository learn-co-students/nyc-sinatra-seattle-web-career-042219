<h1>Edit a Figure</h1>
<form action="/figures/<%= @figure.id %>" method='POST'>
    <input type="hidden" name="_method" value="patch">
    <label>Name: </label>
    <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>"><br>
    <label>Edit Titles: </label><br>
    <% Title.all.each do |title| %>
        <label><%= title.name %>: </label>
        <input type="checkbox" id="title_<%= title.name %>" name="figure[title_ids][]" value="<%= title.id %>" <%='checked' if @figure.titles.include?(title) %>><br>
    <% end %><br>
    <label>Add a new Title: </label><br>
    <input type="text" name="title[name]" id="new_title"><br>
    <label>Edit Landmarks: </label><br>
    <% Landmark.all.each do |landmark| %>
        <label><%= landmark.name %>: </label>
        <input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%='checked' if @figure.landmarks.include?(landmark) %>><br>
    <% end %><br>

    <label>Add a new Landmark:</label><br>
    <input type="text" name="landmark[name]" id="new_landmark"><br>
    <label>Year: </label><br>
    <input type="text" name="year" id="landmark[year_completed]"><br>
    <input type="submit" name="" id="" value="Edit Figure">

</form>